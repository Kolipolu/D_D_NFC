<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.dicj.d_d_nfc.CreationPersonnage"
    android:background="#000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/cr_er_un_personnage"
        android:id="@+id/txtTitle"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/nom_personnage"
                    android:id="@+id/txtNom"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/edTextNom"
                    android:maxLength="20"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/age"
                    android:id="@+id/textView"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/edTxtAge"
                    android:maxLength="3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/sexe"
                    android:id="@+id/textView3"
                    android:textColor="#ffffff" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tglSexe"
                    android:textOn="M"
                    android:textOff="F"
                    android:checked="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/taille"
                    android:id="@+id/textView4"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/edTxtTaille"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/poids"
                    android:id="@+id/textView5"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/edTxtPoids"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/race_classe"
                    android:id="@+id/txtRaceClasse"
                    android:textColor="#ffffff" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edTxtRaceClasse" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/For"
                        android:id="@+id/textView6"
                        android:textColor="#ffffff" />

                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtForce"
                        android:maxLength="2"/>

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/Int"
                        android:id="@+id/textView9"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtIntelligence"
                        android:maxLength="2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/pv"
                        android:id="@+id/textView12"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtPV"
                        android:maxLength="2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/lvl"
                        android:id="@+id/textView2"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp" />

                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:ems="10"
                        android:maxLength="2"
                        android:id="@+id/txtLvl" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/dex"
                        android:id="@+id/textView7"
                        android:textColor="#ffffff" />

                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtDexterite"
                        android:maxLength="2"/>

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/sag"
                        android:id="@+id/textView10"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtSagesse"
                        android:maxLength="2"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/con"
                        android:id="@+id/textView8"
                        android:textColor="#ffffff" />

                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtConstitution"
                        android:maxLength="2"/>

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/cha"
                        android:id="@+id/textView11"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtCharisme"
                        android:maxLength="2"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/nom"
                        android:id="@+id/textView13"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/attaque"
                        android:id="@+id/textView14"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="60dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/dommage"
                        android:id="@+id/textView15"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/munition"
                        android:id="@+id/textView16"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="40dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTxtAttNom1" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttAtt1" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttDom1"
                        android:layout_marginLeft="40dp" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttMun1"
                        android:layout_marginLeft="55dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTxtAttNom2" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttAtt2" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttDom2"
                        android:layout_marginLeft="40dp" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttMun2"
                        android:layout_marginLeft="55dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTxtAttNom3" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttAtt3" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttDom3"
                        android:layout_marginLeft="40dp" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttMun3"
                        android:layout_marginLeft="55dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTxtAttNom4" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttAtt4" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttDom4"
                        android:layout_marginLeft="40dp" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttMun4"
                        android:layout_marginLeft="55dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" >

                    <EditText
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTxtAttNom5" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttAtt5" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttDom5"
                        android:layout_marginLeft="40dp" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/edTxtAttMun5"
                        android:layout_marginLeft="55dp" />
                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enregister_le_personnage"
                    android:id="@+id/btnSavePerso"
                    android:layout_marginTop="10dp"
                    android:onClick="btnSavePersoOnClick"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>